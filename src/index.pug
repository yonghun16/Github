extends template/layout

block content 
    .body__container 
        //- HEADER
        header.section 
            .inner.clearfix 
                .menu-group.float--left
                    .logo
                        a(href="#") Github
                    ul.main-menu.toggle 
                        li 
                            a(href="#") Personal
                        li
                            a(href="#") Open source
                        li
                            a(href="#") Business
                        li
                            a(href="#") Explore
                .sign-group.float--right.toggle 
                    .btn-group
                        a(href="#" class="btn sign-in") Sign in 
                        a(href="#" class="btn btn--primary sign-up") Sign up  
                    form(id="search-form" action="" method="post") 
                        input(type="text" id="search" class="input--text" placeholder="Search GitHub")
                        input(type="submit" value="Submit")
                    ul.sub-menu 
                        li 
                            a(href="#") Pricing  
                        li 
                            a(href="#") Blog  
                        li 
                            a(href="#") Support  
                #toggle-btn Header menu Toggle Button

        //- VISUAL
        section.section.section--visual 
            .inner
                .summary 
                    h2.summary__title How&nbsp;people build&nbsp;software
                    p.summary__description Millions of developers use GitHub to build personal projects, support their businesses, and&nbsp;work together on open source technologies.
                form(id="sign-form" method="POST" action="") 
                    ul
                        li 
                            input(type="text" class="input--text" placeholder="Pick a username")
                        li 
                            input(type="email" class="input--text" placeholder="Your email address")
                        li  
                            input(type="password" class="input--text" placeholder="Create a password")
                            p.caption Use at least one letter, one numeral, and seven characters.
                        li 
                            button(type="submit").btn.btn--primary Sign up for GitHub 
                            p.caption By clicking "Sign up for GitHub", you agree to our terms of service and privacy policy. We'll occasionally send you account related emails.
        //- FEATURE
        section.section.section--feature 
            .summary 
                h2.summary__title Welcome home, developers
                p.summary__description GitHub fosters a fast, flexible, and collaborative development process that lets you work on your own or with others.
            .video
                .video-ratio 
                    iframe(width="1280" height="720" src="https://www.youtube.com/embed/afvT1c1ii0c" title="How we build software." frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen)
            .tiles 
                .inner 
                    ul.clearfix 
                        li 
                            img(src="img/home-ill1-build.png" alt="build")
                            h3 For everything you build
                            p Host and manage your code on GitHub. You can keep your work private or share it with the world.
                        li 
                            img(src="img/home-ill2-work.png" alt="work")
                            h3 A better way to work
                            p From hobbyists to professionals, GitHub helps developers simplify the way they build software.
                        li 
                            img(src="img/home-ill3-projects.png" alt="project")
                            h3 Millions of projects
                            p GitHub is home to millions of open source projects. Try one out or get inspired to create your own.
                        li 
                            img(src="img/home-ill4-platform.png" alt="platform")
                            h3 One platform, from start to finish
                            p With hundreds of integrations, GitHub is flexible enough to be at the center of your development process.
        //- Where is
        section.section.section--where-is 
            .inner 
                .summary 
                    .summary__title Where is GitHub?
                    .summary__description GitHub is where people build software. More than 18 million people use GitHub to discover, fork, and contribute to over 48 million projects.
                #map
        //- Pricing card
        section.section.section--pricing
            .inner 
                .card
                    .cell.cell1
                        a(href="#" class="btn btn--primary") Sign up for GitHub 
                    .cell.cell2 Public projects are always free. Work together across unlimited private repositories for $7 / month.
        //- FOOTER
        footer.section 
            .inner 
                ul.site-links.float--right 
                    li 
                        a(href="#") Contact GitHub  
                    li
                        a(href="#") API 
                    li 
                        a(href="#") Training 
                    li 
                        a(href="#") Shop 
                    li 
                        a(href="#") Blog 
                    li 
                        a(href="#") About      
                ul.site-links.float--left 
                    li Â© 2023 GitHub, Inc. 
                    li
                        a(href="#") Terms 
                    li
                        a(href="#") Privacy 
                    li
                        a(href="#") Security 
                    li
                        a(href="#") Status 
                    li
                        a(href="#") Help 
                a(href="#" class="logo") 
                    svg(
                        version="1.1"
                        xmlns="http://www.w3.org/2000/svg"
                        xmlns:xlink="http://www.w3.org/1999/xlink"
                        width="24"
                        height="24"
                        viewBox="0 0 16 16"
                        fill="#ccc"
                    )
                       path(
                            fill-rule="evenodd"
                            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z"
                        )
    script.
        function initMap() {
            const myLatLang = {
                lat: 37.782293,
                lng: -122.39124,
            };
            const map = new google.maps.Map(document.getElementById("map"), {
                center: myLatLang,
                scrollwheel: false,
                zoom: 18,
            });
            const marker = new google.maps.Marker({
                position: myLatLang,
                map: map,
                title: "GitHub",
            });
        }
    script(
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBnFxGp8moiZPF80tfeAL-UfCkroxmTkLs&callback=initMap"
        async
        defer
    )

