extends template/layout

block content 
    .body__container 
        //- HEADER
        header.section 
            .inner.clearfix 
                .menu-group.float--left
                    .logo
                        a(href="#") Github
                    ul.main-menu
                        li 
                            a(href="#") Personal
                        li
                            a(href="#") Open source
                        li
                            a(href="#") Business
                        li
                            a(href="#") Explore
                .sign-group.float--right
                    .btn-group
                        a(href="#" class="btn sign-in") Sign in 
                        a(href="#" class="btn btn--primary sign-up") Sign up  
                    form(id="search-form" action="" method="post") 
                        input(type="text" id="search" class="input--text" placeholder="Search GitHub")
                        input(type="submit" value="Submit")
                    ul.sub-menu 
                        li 
                            a(href="#") Pricing  
                        li 
                            a(href="#") Blog  
                        li 
                            a(href="#") Pricing   
        //- VISUAL
        section.section.section--visual 
            .inner
                .summary 
                    .summary__title How&nbsp;people build&nbsp;software
                    .summary__description Millions of developers use GitHub to build personal projects, support their businesses, and&nbsp;work together on open source technologies.
                form(id="sign-form" method="POST" action="") 
                    ul
                        li 
                            input(type="text" class="input--text" placeholder="Pick a username")
                        li 
                            input(type="email" class="input--text" placeholder="Your email address")
                        li  
                            input(type="password" class="input--text" placeholder="Create a password")
                            p.caption Use at least one letter, one numeral, and seven characters.
                        li 
                            button(type="submit").btn.btn--primary Sign up for GitHub 
                            p.caption By clicking "Sign up for GitHub", you agree to our terms of service and privacy policy. We'll occasionally send you account related emails.

